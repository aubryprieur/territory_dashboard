            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <%
                # Communes avec les taux les plus élevés
                high_part_time = @epci_women_employment_data["communes"]
                                .sort_by { |c| -c["part_time_rate_15_64"].to_f }
                                .first(3)

