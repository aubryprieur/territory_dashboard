<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- En-tête de la page admin -->
    <div class="px-4 py-6 sm:px-0">
      <div class="border-4 border-dashed border-red-200 rounded-lg p-6 bg-white">
        <div class="text-center">
          <div class="flex items-center justify-center mb-4">
            <svg class="h-8 w-8 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              SUPER ADMIN
            </span>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            Panneau d'Administration
          </h1>
          <p class="text-lg text-gray-600">
            Bienvenue <%= current_user.email %>, gérez votre plateforme
          </p>
        </div>
      </div>
    </div>

    <!-- Cards d'administration -->
    <div class="px-4 py-6 sm:px-0">
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Card Gestion des Utilisateurs -->
        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-blue-500">
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <!-- Icône Utilisateurs -->
                <svg class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">
                  Gestion des Utilisateurs
                </h3>
                <p class="text-sm text-gray-500">
                  Créer, modifier et gérer les comptes utilisateurs
                </p>
              </div>
            </div>

            <!-- Statistiques rapides -->
            <div class="mt-4 grid grid-cols-2 gap-4">
              <div class="bg-blue-50 rounded-lg p-3">
                <div class="text-sm font-medium text-blue-900">Total utilisateurs</div>
                <div class="text-2xl font-bold text-blue-600"><%= User.count %></div>
              </div>
              <div class="bg-green-50 rounded-lg p-3">
                <div class="text-sm font-medium text-green-900">Utilisateurs actifs</div>
                <div class="text-2xl font-bold text-green-600"><%= User.active.count %></div>
              </div>
            </div>

            <div class="mt-6">
              <a href="<%= admin_users_path %>"
                 class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Gérer les Utilisateurs
              </a>
            </div>
          </div>
        </div>

        <!-- Card Gestion des Enquêtes -->
        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-purple-500">
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <!-- Icône Enquêtes -->
                <svg class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">
                  Gestion des Enquêtes
                </h3>
                <p class="text-sm text-gray-500">
                  Créer, modifier et publier des enquêtes pour les collectivités
                </p>
              </div>
            </div>

            <!-- Statistiques rapides -->
            <div class="mt-4 grid grid-cols-2 gap-4">
              <div class="bg-purple-50 rounded-lg p-3">
                <div class="text-sm font-medium text-purple-900">Total enquêtes</div>
                <div class="text-2xl font-bold text-purple-600"><%= Survey.count %></div>
              </div>
              <div class="bg-yellow-50 rounded-lg p-3">
                <div class="text-sm font-medium text-yellow-900">Enquêtes publiées</div>
                <div class="text-2xl font-bold text-yellow-600"><%= Survey.where(published: true).count %></div>
              </div>
            </div>

            <div class="mt-6">
              <a href="<%= admin_surveys_path %>"
                 class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200">
                <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Gérer les Enquêtes
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Section statistiques globales -->
    <div class="px-4 py-6 sm:px-0">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
            Statistiques de la Plateforme
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-gray-900"><%= User.where(territory_type: 'commune').count %></div>
              <div class="text-sm text-gray-500">Communes inscrites</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-gray-900"><%= User.where(territory_type: 'epci').count %></div>
              <div class="text-sm text-gray-500">EPCI inscrits</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-gray-900"><%= UserSurvey.count %></div>
              <div class="text-sm text-gray-500">Enquêtes lancées</div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-gray-900"><%= User.suspended.count %></div>
              <div class="text-sm text-gray-500">Comptes suspendus</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions rapides (optionnel) -->
    <div class="px-4 py-6 sm:px-0">
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg p-6 text-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium">Actions Rapides</h3>
            <p class="text-indigo-100">Accès direct aux fonctions administratives courantes</p>
          </div>
          <div class="flex space-x-3">
            <a href="<%= new_admin_user_path %>"
               class="inline-flex items-center px-3 py-2 border border-white border-opacity-30 rounded-md text-sm font-medium text-white hover:bg-white hover:bg-opacity-10 transition-colors duration-200">
              <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Nouvel utilisateur
            </a>
            <a href="<%= new_admin_survey_path %>"
               class="inline-flex items-center px-3 py-2 border border-white border-opacity-30 rounded-md text-sm font-medium text-white hover:bg-white hover:bg-opacity-10 transition-colors duration-200">
              <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              Nouvelle enquête
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
